<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.HyperLocalCommunity" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:colorBackground">@color/dark_theme_background</item>
        <item name="colorSurface">@color/dark_theme_surface</item>
        <item name="colorOnBackground">@color/dark_theme_text_primary</item>
        <item name="colorOnSurface">@color/dark_theme_text_primary</item>
        <item name="colorOnSurfaceVariant">@color/dark_theme_text_secondary</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
