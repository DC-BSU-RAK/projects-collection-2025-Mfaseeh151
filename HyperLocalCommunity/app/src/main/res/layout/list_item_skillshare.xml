<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:layout_marginBottom="8dp"
    android:background="@drawable/list_item_background">

    <TextView
        android:id="@+id/textViewSkillShareTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/text_title_color"
        android:text="@string/placeholder_skillshare_title" />

    <TextView
        android:id="@+id/textViewSkillShareDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/text_description_color"
        android:layout_marginTop="4dp"
        android:maxLines="3"
        android:ellipsize="end"
        android:text="@string/placeholder_skillshare_description" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/textViewSkillShareType"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="12sp"
            android:textColor="@color/text_date_color"
            android:textStyle="italic"
            android:text="@string/type_label" />

        <TextView
            android:id="@+id/textViewSkillShareCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/text_date_color"
            android:text="@string/category_label" />
    </LinearLayout>

    <TextView
        android:id="@+id/textViewSkillSharePostedBy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/dark_gray"
        android:layout_marginTop="6dp"
        android:gravity="end"
        android:text="@string/posted_by"/>
</LinearLayout>