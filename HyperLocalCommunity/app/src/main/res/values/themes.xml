<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Main app theme -->
    <style name="Theme.HyperLocalCommunity" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnBackground">@color/black</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorOnSurfaceVariant">@color/dark_gray</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <!-- Splash screen theme -->
    <style name="Theme.HyperLocalCommunity.Splash" parent="Theme.SplashScreen">
        <!-- Set the full-screen background image -->
        <item name="windowSplashScreenBackground">@drawable/splash_background</item>

        <!-- Optional: remove this if you don't want a logo/icon -->
        <!-- <item name="windowSplashScreenAnimatedIcon">@drawable/ic_splash_logo</item> -->

        <!-- After splash, use your main app theme -->
        <item name="postSplashScreenTheme">@style/Theme.HyperLocalCommunity</item>
    </style>

</resources>
